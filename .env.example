# MongoDB connection string
# Format: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority
DATABASE_URL=

# Clerk Authentication Keys
# Get these from your Clerk dashboard (https://dashboard.clerk.com)
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=

# Clerk Authentication URLs
# These should match the routes in your app router
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up

# Clerk Redirect URLs after authentication
# Where users are redirected after successful sign-in/sign-up
NEXT_PUBLIC_CLERK_SIGN_IN_FALLBACK_REDIRECT_URL=/
NEXT_PUBLIC_CLERK_SIGN_UP_FALLBACK_REDIRECT_URL=/

# Clerk Webhook Secret
# Used to verify webhook requests from Clerk
# Generate this in your Clerk dashboard under Webhooks
CLERK_WEBHOOK_SIGNING_SECRET=

# Optional: Development-specific variables
# NODE_ENV=development
# NEXT_PUBLIC_DEBUG_MODE=true